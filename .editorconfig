# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Matches all files
[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
max_line_length = 120
insert_final_newline = true
trim_trailing_whitespace = true

[Makefile]
indent_style = tab

[*.{md,mdx}]
max_line_length = off

[*.{yaml,yml,conf}]
indent_size = 2


