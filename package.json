{
  "private": true,
  "packageManager": "pnpm@8.6.7",
  "author": "Alan Lu <alanlu.zyl@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=18.16.0",
    "npm": "use pnpm please!",
    "yarn": "use pnpm please!",
    "pnpm": ">=8.6.0"
  },
  "scripts": {
    "build": "turbo run build",
    "build:clean": "rm -rf ./packages/**/*dist && turbo run build --force --no-cache",
    "check": "npm run commit-check && turbo run test lint type-check --parallel",
    "commit-check": "commitlint --from=HEAD~1 --verbose",
    "test": "turbo run test --parallel",
    "lint": "turbo run lint --parallel",
    "type-check": "turbo run type-check",
    "dev": "turbo run dev",
    "dev:nuxt-demo": "turbo run dev --filter=nuxt-demo",
    "preinstall": "npx -y only-allow pnpm",
    "postinstall": "npx simple-git-hooks",
    "commit": "pnpm czg",
    "update": "pnpm update -r"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged",
    "commit-msg": "pnpm commitlint --edit $1"
  },
  "dependencies": {
    "@formkit/icons": "^0.17.4",
    "@formkit/nuxt": "^0.17.4",
    "@pinia/nuxt": "^0.4.11",
    "pinia": "^2.1.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.6",
    "@commitlint/config-conventional": "^17.6.6",
    "@element-plus/nuxt": "^1.0.5",
    "@nuxt/content": "^2.7.0",
    "@nuxt/devtools": "^0.6.7",
    "@nuxt/image": "1.0.0-rc.1",
    "@nuxtjs/color-mode": "^3.3.0",
    "@nuxtjs/i18n": "8.0.0-beta.13",
    "@pinia-plugin-persistedstate/nuxt": "^1.1.1",
    "@types/node": "^18.16.19",
    "@vueuse/core": "^10.2.1",
    "@vueuse/nuxt": "^10.2.1",
    "@zy-kit/components": "workspace:*",
    "@zy-kit/utils": "workspace:*",
    "cz-git": "^1.7.0",
    "czg": "^1.7.0",
    "element-plus": "^2.3.8",
    "eslint": "^8.44.0",
    "eslint-config-custom": "workspace:*",
    "lint-staged": "^13.2.3",
    "markdownlint-cli2": "^0.7.1",
    "markdownlint-config-custom": "workspace:*",
    "nuxt": "^3.6.2",
    "nuxt-icon": "^0.4.2",
    "postcss": "^8.4.25",
    "postcss-preset-env": "^9.0.0",
    "prettier": "^2.8.8",
    "prettier-config-custom": "workspace:*",
    "sass": "^1.63.6",
    "simple-git-hooks": "^2.8.1",
    "stylelint": "^15.10.1",
    "stylelint-config-custom": "workspace:*",
    "tsup": "^7.1.0",
    "turbo": "^1.10.7",
    "typescript": "5.1.6",
    "vue-tsc": "^1.8.4"
  }
}
