{
  "private": true,
  "packageManager": "pnpm@8.6.7",
  "author": "Alan Lu <alanlu.zyl@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=18.16.0",
    "npm": "use pnpm please!",
    "yarn": "use pnpm please!",
    "pnpm": ">=8.6.0"
  },
  "scripts": {
    "build": "turbo run build",
    "build:clean": "rm -rf ./packages/**/*dist && turbo run build --force --no-cache",
    "check": "npm run commit-check && turbo run test lint type-check --parallel",
    "commit-check": "commitlint --from=HEAD~1 --verbose",
    "test": "turbo run test --parallel",
    "lint": "turbo run lint --parallel",
    "type-check": "turbo run type-check",
    "dev": "turbo run dev",
    "dev:nuxt-app": "turbo run dev --filter=nuxt-app",
    "preinstall": "npx -y only-allow pnpm",
    "postinstall": "npx simple-git-hooks",
    "commit": "pnpm czg",
    "update": "pnpm update -r"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.6",
    "@commitlint/config-conventional": "^17.6.6",
    "cz-git": "^1.7.0",
    "czg": "^1.7.0",
    "eslint": "^8.44.0",
    "eslint-config-custom": "workspace:*",
    "lint-staged": "^13.2.3",
    "markdownlint-cli2": "^0.7.1",
    "markdownlint-cli2-formatter-pretty": "^0.0.4",
    "markdownlint-config-custom": "workspace:*",
    "postcss": "^8.4.25",
    "postcss-html": "^1.5.0",
    "postcss-preset-env": "^9.0.0",
    "postcss-scss": "^4.0.6",
    "prettier": "^2.8.8",
    "sass": "^1.63.6",
    "simple-git-hooks": "^2.8.1",
    "stylelint": "^15.10.1",
    "stylelint-config-recess-order": "^4.2.0",
    "stylelint-config-recommended-vue": "^1.4.0",
    "stylelint-config-standard-scss": "^9.0.0",
    "turbo": "^1.10.7",
    "typescript": "5.1.6"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged",
    "commit-msg": "pnpm commitlint --edit $1"
  }
}
